<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.briup.smartlabs.mapper.SmartEnvDetailMapper">
  <resultMap id="BaseResultMap" type="com.briup.smartlabs.bean.SmartEnvDetail">
    <id column="id" jdbcType="INTEGER" property="id" />
    <result column="device_adres" jdbcType="VARCHAR" property="deviceAdres" />
    <result column="gather_date" jdbcType="TIMESTAMP" property="gatherDate" />
    <result column="type" property="type"/>
    <result column="value" property="value"/>
  </resultMap>

  <select id="selectAll" resultMap="BaseResultMap">
    select id, device_adres,type,value,gather_date
    from smart_env
  </select>

  <select id="findAllByCondition" resultMap="BaseResultMap">
  	select id,device_adres,type,value,gather_date
  	from smart_env
  	<where>
  		<if test="start != null">
  			gather_date >= #{start}
  		</if>
  		<if test="end != null">
  			and gather_date &lt;= #{end}
  		</if>
  		<if test="type!=null and type!=''">
  			and type = #{type}
  		</if>
  	</where>
  	order by gather_date desc
  </select>
</mapper>