<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.briup.smartlabs.mapper.ex.UserRoleRExMapper">
	<delete id="deleteByUser">
		delete from sys_user_role
		where user_id = #{id}
	</delete>
	
	<select id="findRoleIdByUser" resultType="long">
		select role_id 
		from sys_user_role
		where user_id = #{id}
	</select>
	
	<delete id="batchDeleteByUser">
		delete from sys_user_role
		where user_id in 
		<foreach item="userid" collection="collection" open="(" separator="," close=")">
			#{userid}
		</foreach>
	</delete>
</mapper>